<config>
    <sections>
        <aydus_customconfigurable translate="label" module="aydus_customconfigurable">
            <label>CustomConfigurable</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label" module="aydus_customconfigurable">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
		            <show_in_default>1</show_in_default>
		            <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <attribute translate="label" module="aydus_customconfigurable">
                            <label>Default Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aydus_customconfigurable/adminhtml_system_config_source_catalog_attribute</source_model>
                            <backend_model>aydus_customconfigurable/system_config_backend_customconfigurable_attribute</backend_model>                            
                            <sort_order>1</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Select default attribute used to create CustomConfigurable configurable and simples.]]></comment>
                        </attribute> 
                        <configurable_product translate="label" module="aydus_customconfigurable">
                            <label>Default Configurable Product</label>
                            <frontend_type>text</frontend_type>
                            <source_model>aydus_customconfigurable/adminhtml_system_config_source_catalog_attribute</source_model>
                            <sort_order>2</sort_order>
				            <show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enter the SKU of the default CustomConfigurable Configurable Product.]]></comment>
                        </configurable_product>                                                                 
                    </fields>
                </configuration>
            </groups>            
        </aydus_customconfigurable>    
    </sections>
</config>

